<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.awchoudhary.bookpocket.CreateBookActivity"
    tools:showIn="@layout/activity_create_book">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dp" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:src="@drawable/goldenhand_cover"/>

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_title_input"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/subtitleInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_subtitle_input"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/authorInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_author_input"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/numPagesInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_num_pages_input"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/dateStartedInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_date_started_input"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="date" />

            <EditText
                android:id="@+id/dateCompletedInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_date_completed_input"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="date" />

            <EditText
                android:id="@+id/descriptionInput"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Description"
                android:background="@drawable/input_background"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/notesInput"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Notes"
                android:background="@drawable/input_background"
                android:paddingBottom="50dp"
                android:padding="10dp"/>

        </LinearLayout>


    </ScrollView>

    <include layout="@layout/bottom_save_bar" />

</RelativeLayout>