<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.awchoudhary.bookpocket.EditNotesTabFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/edit_notes_tab_fragment">

    <ListView
        android:id="@+id/notesList"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/newNoteForm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView android:id="@+id/titleLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/label_input_spacing"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:text="Title" />

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:padding="@dimen/input_padding"
                android:layout_marginBottom="@dimen/input_spacing"
                android:inputType="text" />

            <TextView android:id="@+id/date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/label_input_spacing"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:text="Date"/>

            <EditText
                android:id="@+id/dateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:padding="@dimen/input_padding"
                android:layout_marginBottom="@dimen/input_spacing"
                android:inputType="text" />

            <EditText
                android:id="@+id/noteInput"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@drawable/input_background"
                android:layout_marginBottom="@dimen/input_spacing"
                android:padding="@dimen/input_padding"
                android:minLines="5" />

            <TextView android:id="@+id/newNoteButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/label_input_spacing"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:text="New Note"/>

        </LinearLayout>

</RelativeLayout>

